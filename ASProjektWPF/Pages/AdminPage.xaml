<Page x:Class="ASProjektWPF.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ASProjektWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="500">
            <Button Content="Dodaj kategorie" Click="Btn_AddCategory_Click" Style="{StaticResource SearchButton}" Padding="10" Margin="10"/>
            <Button Content="Dodaj poziom stanowiska" Click="Btn_AddPositionLevel_Click" Style="{StaticResource SearchButton}" Padding="10" Margin="10"/>
            <Button Content="Dodaj rodzaj umowy" Click="Btn_AddContractType_Click" Style="{StaticResource SearchButton}" Padding="10" Margin="10"/>
            <Button Content="Dodaj wymiar pracy" Click="Btn_AddWorkTime_Click" Style="{StaticResource SearchButton}" Padding="10" Margin="10"/>
            <Button Content="Dodaj tryb pracy" Click="Btn_AddWorkType_Click" Style="{StaticResource SearchButton}" Padding="10" Margin="10"/>
        </WrapPanel>
    </Grid>
</Page>
